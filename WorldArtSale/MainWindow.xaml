<Window x:Class="WorldArtSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldArtSale"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="World Art Sale" Height="650" Width="1000"
        Icon="FormMainIcon/wand.png"
        Loaded="StartJasonUpdate"
        LayoutUpdated="Window_LayoutUpdated">
       
                 
    <Grid x:Name="GridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid x:Name="GridTopLeft"
              Grid.Column="0"
              Grid.Row="0"
              Margin="0" />
        <Grid x:Name="GridTopMiddel"
              Grid.Column="1"
              Grid.Row="0"
              Margin="0" />
        <Grid x:Name="GridTopRight"
              Grid.Column="2"
              Grid.Row="0"
              Margin="0" />
        <Grid x:Name="GridBottum"
              Grid.Column="0"
              Grid.Row="1"
              Grid.ColumnSpan="3"              
              Margin="0" />
    </Grid>
</Window>
